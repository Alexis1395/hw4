
    <main class="container">
        <h1 class="mb-4"><%= @place["name"] %></h1>
        <button class="btn btn-dark mb-4" onclick="window.location.href='/entries/new?place_id=<%= @place["id"] %>'">New Post</button>

        <h2>My Entries</h2>
        <div class="row">
            <% @entries.each do |entry| %>
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title h5"><%= entry["title"] %></h3>
                            <p class="card-subtitle text-muted mb-2"><%= entry["occurred_on"] %></p>
                            <div class="image-placeholder bg-secondary mb-2" style="height: 150px;"></div>
                            <p class="card-text"><%= entry["description"] %></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>

        <p>
            <a href="/places" class="btn btn-secondary">Back to All Places</a>
        </p>
    </main>

