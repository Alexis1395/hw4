  <main class="container">
        <h1 class="mb-4">New Place</h1>
        <form action="/places" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="name_input" class="form-label">Name</label>
                <input type="text" name="name" id="name_input" class="form-control" required>
                <div class="invalid-feedback">
                    Please enter a name.
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </main>